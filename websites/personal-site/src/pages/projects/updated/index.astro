---
import MasterTemplate from '../../../layouts/master.astro'
import { projectsRepository, allTags } from '../../../dataservice'
import ProjectList from '../../../components/project-list.astro'

const { getAllProjects } = projectsRepository
const projects = await getAllProjects()
---

<MasterTemplate title='Projects - Updated'>
  <ProjectList
    projects={projects}
    tags={allTags}
    sortType='updated'
  />
</MasterTemplate>
